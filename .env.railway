# Railway-specific environment variables
# Copy these to your Railway project settings

# Required: Geneline-X Configuration
GENELINE_HOST=https://message.geneline-x.net
GENELINE_API_KEY=your-api-key-here
GENELINE_CHATBOT_ID=your-chatbot-id-here

# Required: Admin API
ADMIN_API_KEY=your-admin-secret-here

# Agent Mode (IMPORTANT: Set to true to enable agent framework)
ENABLE_AGENT_MODE=true
AGENT_MAX_ITERATIONS=5
AGENT_CONVERSATION_HISTORY_LIMIT=10

# Optional: WhatsApp Configuration
WHATSAPP_CLIENT_ID=railway-bot
ALLOW_GROUP_MESSAGES=false

# Optional: Queue & Rate Limiting
MAX_CONCURRENCY=5
PER_CHAT_RATE_LIMIT_MS=1000

# Optional: Server Configuration
NODE_ENV=production
PORT=3000

# Optional: Document Ingestion
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=application/pdf
